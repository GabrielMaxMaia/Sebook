# BEGIN WordPress
<IfModule mod_rewrite.c>
RewriteEngine On
#RewriteBase /
#RewriteRule ^index\.php$ - [L]
#RewriteCond %{REQUEST_FILENAME} !-f
#RewriteCond %{REQUEST_FILENAME} !-d

#Pega o caminho na url de tudo apos area
RewriteRule ^area\/([a-z]+)$ index.php?area=$1 [NC,L]

#Regra para caminhar até o post ou Página 
RewriteRule ^area\/([a-z]+)\/([a-z]+)\/([a-z]+)\/([0-9]+)$ https://sebook.com.br/index.php?area=$1&pasta=$2&page=$3&id=$4 [NC,L]


#Regra de paginação
RewriteRule ^area\/([a-z]+)\/([a-z]+)\/([a-z]+)\/pagina\/([0-9]+)$ https://sebook.com.br/index.php?area=$1&pasta=$2&page=$3&pagina=$4 [NC,L]


#Regra para excluirPost
RewriteRule ^area\/([a-z]+)\/([a-z]+)\/([a-z]+)\/delete\/([\d]+)$ https://sebook.com.br/index.php?area=$1&pasta=$2&page=$3&acao=3&idDelete=$4 [NC,L]


#Regra para chegar nas pastas de adm
RewriteRule ^area\/([a-z]+)\/([a-z]+)\/([a-z]+)$ https://sebook.com.br/index.php?area=$1&pasta=$2&page=$3 [NC,L]


#Regra para adicionar
RewriteRule ^area\/([a-z]+)\/([a-z]+)\/([a-z]+)\/add$ https://sebook.com.br/index.php?area=$1&pasta=$2&page=$3&acao=1 [NC,L]


#Regra para alterar
RewriteRule ^area\/([a-z]+)\/([a-z]+)\/([a-z]+)\/alter\/([\d]+)$ https://sebook.com.br/index.php?area=$1&pasta=$2&page=$3&acao=2&id=$4 [NC,L]


#Regra para altera Tabelas conjuntas com 2 ids
RewriteRule ^area\/([a-z]+)\/([a-z]+)\/([a-z]+)\/alter\/([\d]+)\/([\d]+)$ https://sebook.com.br/index.php?area=$1&pasta=$2&page=$3&acao=2&id=$4&isbnLivro=$5 [NC,L]

#Regra para Tabelas conjuntas com 2 ids
RewriteRule ^area\/([a-z]+)\/([a-z]+)\/([a-z]+)\/delete\/([\d]+)\/([\d]+)$ http://sebook.com.br/index.php?area=$1&pasta=$2&page=$3&acao=3&id=$4&isbnLivro=$5 [NC,L]


#Regra para deletar
RewriteRule ^area\/([a-z]+)\/([a-z]+)\/([a-z]+)\/delete\/([\d]+)$ http://sebook.com.br/index.php?area=$1&pasta=$2&page=$3&acao=3&id=$4 [NC,L]


#Regra para sair do login
RewriteRule ^area/adm/sair$ http://sebook.com.br/index.php?area=adm&logout=true [NC,L]

</IfModule>
# END WordPress

